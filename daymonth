month = ''
while month != 'выход':

#print("введите месяц:")
    month=input("введите месяц:")
    day31= ("январь", "март", "май", "июль", "август","октябрь","декабрь")
    day30= ("апрель","июнь","сентябрь","ноябрь")
    day28= ("февраль")

    if month in day31:
        print (31)
    elif  month in day30:
        print (30)
    elif month in day28:
        print(28)
print('программа закончена')


